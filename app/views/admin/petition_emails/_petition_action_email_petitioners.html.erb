<h2 class="petition-action-heading">Other Senedd business</h2>

<% if petition.emails.any?(&:persisted?) %>
  <table class="petition-list petition-emails">
    <thead>
      <tr>
        <th>Subject</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% petition.emails.select(&:persisted?).each do |email| %>
        <tr>
          <td><%= email.subject %></td>
          <td>
            <%= button_to "Edit", edit_admin_petition_email_path(petition, email), method: :get, class: "button" %>
            <%= button_to "Delete", admin_petition_email_path(petition, email), method: :delete, class: "button-warning", data: { confirm: "Delete other Senedd business?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "New other Senedd business", new_admin_petition_email_path(@petition), class: "button" %>
