<h2 class="petition-action-heading">Update ScotParl link</h2>

<%= form_for petition, url: admin_petition_scot_parl_link_path(petition), method: :patch do |f| %>

  <% if Site.disable_gaelic_website? %>
    <%= form_row :for => [f.object, :scot_parl_link_en] do %>
      <%= f.label :scot_parl_link_en, "ScotParl link", class: 'form-label visuallyhidden' %>
      <%= error_messages_for_field f.object, :scot_parl_link_en %>
      <%= f.text_field :scot_parl_link_en, tabindex: increment, class: 'form-control' %>
    <% end %>
  <% else %>
    <%= form_row :for => [f.object, :scot_parl_link_en] do %>
      <%= f.label :scot_parl_link_en, "English", class: 'form-label' %>
      <%= error_messages_for_field f.object, :scot_parl_link_en %>
      <%= f.text_field :scot_parl_link_en, tabindex: increment, class: 'form-control' %>
    <% end %>

    <%= form_row :for => [f.object, :scot_parl_link_gd], style: "margin-top: -15px;" do %>
      <%= f.label :scot_parl_link_gd, "Gaelic", class: 'form-label' %>
      <%= error_messages_for_field f.object, :scot_parl_link_gd %>
      <%= f.text_field :scot_parl_link_gd, tabindex: increment, class: 'form-control' %>
    <% end %>
  <% end %>

  <%= f.submit "Save", name: 'save', class: 'button' %>
  <%= link_to 'Cancel', admin_petition_path(@petition), class: 'button-secondary' %>
<% end %>

<%= render 'edit_lock' %>
