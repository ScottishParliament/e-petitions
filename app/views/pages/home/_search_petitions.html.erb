<section class="search-petitions" aria-labelledby="search-petitions-heading">
  <h2 id="search-petitions-heading"><%= t(:"ui.home_page.search_petitions.heading") %></h2>

  <%= form_tag search_path, method: 'get', enforce_utf8: false do %>
    <div class="search-inline">
      <%= text_field_tag 'q', nil, autocomplete: 'off', class: 'form-control', id: 'search' %>
      <%= t(:"ui.home_page.search_petitions.submit_button_html", tabindex: increment) %>
    </div>
  <% end %>
</section>
