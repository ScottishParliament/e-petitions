<% if actioned[:open][:count].zero? %>
  <p><%= t(:"ui.home_page.open_petitions.none_open") %></p>
<% else %>
  <ol class="threshold-petitions">
    <% actioned[:open][:list].each do |petition| %>
      <li class="petition-item">
        <h3><%= link_to petition.action, petition_path(petition), class: "threshold-petition-title" %></h3>
        <p class="intro"><%= t(:"ui.home_page.open_petitions.open_date", date: short_date_format(petition.closed_at)) %></p>
      </li>
    <% end -%>
  </ol>
  <p>
    <%= link_to petitions_path(state: :collecting_signatures), class: "forward" do %>
      <svg class="svg-icon" aria-hidden="true"><use xlink:href="#svg--arrow-circle-right"></use></svg>
      <span><%= petition_count(:open_explanation, actioned[:open][:count]) %></span>
    <% end %>
  </p>
<% end %>
