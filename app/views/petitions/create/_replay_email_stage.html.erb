<p><%= t(:"ui.application.back_html") %></p>

<%= form.hidden_field :action %>
<%= form.hidden_field :background %>
<%= form.hidden_field :previous_action %>
<%= form.hidden_field :additional_details %>
<%= form.hidden_field :name %>
<%= form.hidden_field :phone_number %>
<%= form.hidden_field :address %>
<%= form.hidden_field :postcode %>
<%= form.hidden_field :location_code %>
<%= form.hidden_field :collect_signatures %>
<%= form.hidden_field :privacy_notice %>

<h1 id="page-heading"><%= t(:"ui.petitions.create.replay_email_stage.heading") %></h1>

<%= form_row for: [petition, :email] do %>
  <div class="field">
    <%= form.text_field :email, inputmode: "email", placeholder: " " %>
    <%= form.label :email, t(:"ui.petitions.create.creator_stage.email.label") %>
  </div>
  <%= error_messages_for_field petition, :email %>
  <p><%= t(:"ui.petitions.create.replay_email_stage.fix_email_if_wrong") %></p>
<% end %>

<div class="button-group">
   <%= t(:"ui.petitions.create.replay_email_stage.submit_html") %>
</div>

