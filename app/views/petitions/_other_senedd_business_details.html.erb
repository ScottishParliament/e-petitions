<% unless petition.emails.empty? %>
  <section class="about-item about-item-other-senedd-business" id="other-senedd-business" aria-labelledby="other-senedd-business-heading">
    <h2 id="other-senedd-business-heading"><%= t(:"ui.petitions.other_senedd_business") %></h2>

    <% petition.emails.each do |email| %>
      <details>
        <summary><span class="summary"><%= email.subject %></span></summary>
        <div class="panel-indent panel-no-border">
          <%= markdown_to_html(email.body, link_attributes: { rel: 'nofollow' }) %>
        </div>
      </details>
    <% end %>
  </section>
<% end %>
