<% if gaelic_disabled? && petition.gaelic_translated? %>
  <%= I18n.with_locale(:"gd-GB") { render "content", petition: petition, id: "page-heading" } %>
  <hr />
  <%= I18n.with_locale(:"en-GB") { render "content", petition: petition, id: nil } %>
<% else %>
  <%= render "content", petition: petition, id: "page-heading" %>
<% end %>
