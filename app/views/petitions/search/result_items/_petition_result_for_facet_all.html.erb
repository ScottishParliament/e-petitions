<%= link_to petition_path(petition) do %>
  <h2><%= petition.action %></h2>
  <% case petition.state %>
  <% when "open" %>
    <p><%= t(:"ui.petitions.search.results.items.facet_collecting_signatures.until", date: short_date_format(petition.closed_at)) %></p>
  <% when "closed" %>
    <p><%= t(:"ui.petitions.search.results.items.facet_all.referred", date: short_date_format(petition.closed_at)) %></p>
  <% when "completed" %>
    <p><%= t(:"ui.petitions.search.results.items.facet_all.completed", date: short_date_format(petition.completed_at)) %></p>
  <% when "rejected" %>
    <p><%= t(:"ui.petitions.search.results.items.facet_all.rejected") %></p>
  <% end %>
<% end %>
